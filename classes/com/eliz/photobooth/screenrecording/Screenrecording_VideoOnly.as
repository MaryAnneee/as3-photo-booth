package com.eliz.photobooth.screenrecording {		import de.benz.exec.screenrecording.ScreenRecorder;	import flash.events.Event;	import flash.filesystem.File;	import flash.utils.setInterval;	import flash.utils.clearInterval;		public class Screenrecording_VideoOnly {				private var screenRecorder:ScreenRecorder;				private var vlcFile:File;				private var tempAudioFile:File;		private var tempVideoFile:File;				private var intervalId:Number;				public function Screenrecording_VideoOnly() {			init();			startRecording();		}				private function init():void {			vlcFile = new File("/Applications/VLC.app/Contents/MacOS/VLC");			tempVideoFile = File.desktopDirectory.resolvePath("temp.mp4");		}				private function startRecording():void {			trace("start recording");			screenRecorder = new ScreenRecorder(vlcFile);			screenRecorder.addEventListener(Event.COMPLETE,onComplete);			screenRecorder.startRecording(tempVideoFile);						intervalId = setInterval(stopRecording, 10000);		}				private function stopRecording():void {			trace("stop recording");			clearInterval(intervalId);						screenRecorder.stopRecording();		}				private function onComplete(evt:Event):void {			//vPlayer.source = screenRecorder.targetFile.url;		}	}}